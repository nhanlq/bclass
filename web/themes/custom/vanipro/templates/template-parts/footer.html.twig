<!-- Start: Footer -->
{% if page.footer_top %}
  <section id="footer-top" class="clear">
    <div class="container">
      <div class="footer-top">
        {{ page.footer_top }}
      </div>
    </div><!-- /container -->
  </section>
{% endif %}<!-- /footer-top -->
<footer class="footer clear">
  {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
    <section id="footer-blocks">
      <div class="container">
      <div class="footer-container">
        {% if page.footer_first %}
          <div class="footer-block block-section">          
            {{ page.footer_first }}
          </div> <!--/footer-first -->
        {% endif %}        
        {% if page.footer_second %}
          <div class="footer-block block-section">
            {{ page.footer_second }}
          </div> <!--/footer-second -->
        {% endif %}        
        {% if page.footer_third %}
          <div class="footer-block block-section">
            {{ page.footer_third }}
          </div> <!--/footer-three -->
        {% endif %}        
        {% if page.footer_fourth %}
          <div class="footer-block block-section">
            {{ page.footer_fourth }}
          </div> <!--/footer-fourth -->
        {% endif %}        
      </div> <!--/footer-container -->
      </div> <!--/container -->
    </section> <!--/footer-blocks -->
  {% endif %} {# end if for footer one, two, three, four blocks #}

  {% if page.footer_bottom %}
    <section id="footer-bottom">
      <div class="footer-bottom container block-section clear">
        {{ page.footer_bottom }}
      </div> <!-- /.container -->
    </section>
  {% endif %}<!-- /footer-bottom -->

 {% if copyright_text or all_icons_show %}
  <section id="footer-bottom-last" class="clear">
    <div class="container clear">
    <div class="footer-bottom-last">
      {% if copyright_text %}
        <div class="copyright">
          {% if copyright_text_custom != '' %}
            {{ copyright_text_custom | striptags('<p>,<div>,<span>,<a>,<img>,<ol>,<ul>,<li>,<h1>,<h2>,<h3>,<h4>,<h5>,<h6>,<em>,<strong>,<mark>,<br>,<hr>,<i>') | raw }}
          {% else %}
            &copy; {{ "now"|date("Y") }} {{ site_name }}, All rights reserved.
          {% endif %}
        </div>
      {% endif %}
      {% if all_icons_show %}
        <div class="footer-social-icons">
          {% include '@vanipro/template-parts/social-icons.html.twig' %}
        </div>
      {% endif %}
      </div> <!--/.social icons -->
    </div> <!-- /.container -->
    </div> <!-- /.container -->
  </section> <!-- /footer-bottom-last -->
  {% endif %} <!-- end condition if copyright or social icons -->
</footer>
{% include '@vanipro/template-parts/options.html.twig' %}
{% if scrolltotop_on %}
<div class="scrolltop"><div class="scrolltop-icon">&#x2191;</div></div>
{% endif %}
{% if cookie_message %}
  {{ attach_library('vanipro/cookiealert-scripts') }}
  {% include '@vanipro/template-parts/cookie.html.twig' %}
{% endif %}
<!-- End: Footer -->
{% if font_icon_fontawesome %}
{{ attach_library('vanipro/fontawesome') }}
{% endif %}
{% if fontawesome_five %}
{{ attach_library('vanipro/fontawesome5') }}
{% else %}
<style>
.fab {
  display: none;
}
</style>
{% endif %}
{% if font_icon_material %}
{{ attach_library('vanipro/material') }}
{% endif %}
{% if animated_content %}
  {% include '@vanipro/template-parts/animate.html.twig' %}
  {{ attach_library('vanipro/animated-content') }}
{% endif %}